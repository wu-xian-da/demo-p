<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jianfei.d.dao.info.ImgNewsDao">
  <sql id="Base_Column_List" >
    n.id id, 
    n.title title, 
    n.img_path imgPath, 
    n.status status, 
    n.check_time checkTime, 
    n.order_num orderNum,
    n.push_status pushStatus, 
    n.content content,
    n.create_time createTime, 
    n.update_time updateTime
  </sql>
  
  <insert id="insert" parameterType="com.jianfei.d.entity.info.ImgNews" >
    insert into tb_img_news
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="title != null" >
        title,
      </if>
      <if test="imgPath != null" >
        img_path,
      </if>
      <if test="status != null" >
        status,
      </if>
      <if test="checkTime != null" >
        check_time,
      </if>
      <if test="orderNum != null">
      	order_num,
      </if>
      <if test="pushStatus != null" >
        push_status,
      </if>
      <if test="content != null" >
        content,
      </if>
      <if test="createTime != null" >
        create_time,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="title != null" >
        #{title},
      </if>
      <if test="imgPath != null" >
        #{imgPath},
      </if>
      <if test="status != null" >
        #{status},
      </if>
      <if test="checkTime != null" >
        #{checkTime},
      </if>
      <if test="orderNum != null">
      	#{orderNum}
      </if>
      <if test="pushStatus != null" >
        #{pushStatus},
      </if>
      <if test="content != null" >
        #{content},
      </if>
      <if test="createTime != null" >
        #{createTime},
      </if>
    </trim>
  </insert>
  
  <delete id="delete" parameterType="java.lang.Long" >
    delete from tb_img_news
    where id = #{id}
  </delete>
  
  <update id="update" parameterType="com.jianfei.d.entity.info.ImgNews" >
    update tb_img_news
    <set >
      <if test="title != null" >
        title = #{title},
      </if>
      <if test="imgPath != null" >
        img_path = #{imgPath},
      </if>
      <if test="status != null" >
        status = #{status},
      </if>
      <if test="checkTime != null" >
        check_time = #{checkTime},
      </if>
      <if test="orderNum != null">
      	order_num = #{orderNum},
      </if>
      <if test="pushStatus != null" >
        push_status = #{pushStatus},
      </if>
      <if test="content != null" >
        content = #{content},
      </if>
      <if test="updateTime != null" >
        update_time = #{updateTime},
      </if>
    </set>
    where id = #{id}
  </update>
  
  <select id="get" resultType="com.jianfei.d.entity.info.ImgNews" parameterType="java.lang.Long" >
    select 
    	<include refid="Base_Column_List" />
    from tb_img_news n
    where n.id = #{id}
  </select>
  
  <select id="findPage" resultType="com.jianfei.d.entity.info.ImgNews">
  	select 
    	<include refid="Base_Column_List" />
    from tb_img_news n
    where 1 = 1
    <if test="null != title and '' != title">
        and n.title like CONCAT('%',#{title},'%') 
    </if>
    <if test="null != status">
        and n.status = #{status}
    </if>
    <if test="null != beginCheckTime and '' != beginCheckTime">
        and DATE_FORMAT(n.check_time, '%Y-%m-%d')  <![CDATA[>=]]> #{beginCheckTime}
    </if>
    <if test="null != endCheckTime and '' != endCheckTime">
        and DATE_FORMAT(n.check_time, '%Y-%m-%d')  <![CDATA[<=]]> #{endCheckTime}
    </if>
    order by n.status asc, n.create_time desc
  </select>
  
  <update id="updateImgNewsStatusBatch" parameterType="java.util.List">
  	  <foreach collection="list" item="imgNew" index="index" separator=";">
         UPDATE tb_img_news
         <set>
         	<if test="imgNew.status != null">status = #{imgNew.status},</if>
         	<if test="imgNew.checkTime != null">check_time = #{imgNew.checkTime},</if>
         </set>
         where id = #{imgNew.id}
      </foreach>
  </update>
  
  <update id="updateImgNewsPushStatusBatch" parameterType="java.util.List">
  	  <foreach collection="list" item="imgNew" index="index" separator=";">
         UPDATE tb_img_news
         set push_status = #{imgNew.pushStatus}
         where id = #{imgNew.id}
      </foreach>
  </update>
  
  <!-- web begin -->
  <select id="getListByStatus" resultType="com.jianfei.d.entity.info.ImgNews">
  	select <include refid="Base_Column_List"></include>
  	from tb_img_news n
  	where n.status = #{status}
  	order by n.order_num DESC,n.check_time DESC
  	Limit 0,5
  </select>
  <!-- web end -->
</mapper>